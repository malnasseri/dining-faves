

<% include  ../partials/header.ejs %>
  

   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">

  <!--Material icons-->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">


  



     <div id="main">
  
  <span class="menu-span">

  <span class="menu-btn tooltipped" data-position="right" data-tooltip="Menu" data-original-title="" title="" style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776;</span>  
   <a href="/cuisines"> <i class=" material-icons prefix home-i active">home</i></a>
          <a href="/search"> <i class="material-icons prefix tooltipped" data-position="right" data-tooltip="Search for Recipes" data-original-title="" title=""">restaurant_menu</i></a>
          <% if(!currentUser){ %>
          <a href="/cuisines/new"><i class="material-icons prefix tooltipped" data-position="right" data-tooltip="Add a new Fave" data-original-title="" title="">camera_enhance</i></a>
          <a href="/login"><i class="material-icons tooltipped" data-position="right" data-tooltip="Login" data-original-title="" title="">power_settings_new</i></a>
          
          <a href="/register"><i class="material-icons tooltipped" data-position="right" data-tooltip="SignUp" data-original-title="" title="">person_add</i></a>
          <% } else { %>
          
          <a href="/cuisines/new"><i class="material-icons prefix tooltipped" data-position="right" data-tooltip="Add a new Fave" data-original-title="" title="">camera_enhance</i></a>



          <a href="/user/<%=currentUser.id%>"><i class="material-icons prefix tooltipped" data-position="right" data-tooltip="<%= currentUser.username %>,s profile" data-original-title="" title="">face</i></a>
          <a href="/logout"><i class="material-icons tooltipped" data-position="right" data-tooltip="Logout" data-original-title="" title="">highlight_off</i></a>
          <% } %>
</span>


<div class="container-fluid   cuisines-container" >

  <div class="row">
<div class="container alert-container">
  
  <% if(error && error.length > 0){ %>
      <div class="alert alert-danger" role="alert">
          <%= error %>
      </div>
  <% } %>
  <% if(success && success.length > 0){ %>
      <div class="alert alert-success" role="alert">
          <%= success %>
      </div>
  <% } %>
</div>



   <% cuisines.forEach(function(cuisines){%>

       
    <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12" id="cuisines-col">
      <div class="card-deck">
          <div class="card cuisine-card">
            <a href="/cuisines/<%= cuisines._id %>">
                <img class="card-img-top" height="170" width="273" src="<%=cuisines.image %>" alt="<%= cuisines.name %>">  
            </a>

         




              <div class="card-body cuisine-card-body">
              <div class="text-center cuisine-name">
              <a class="card-title cuisine-title " href="/cuisines/<%= cuisines._id %>">
                <h5 class="card-title"><%= cuisines.name %> 
              </a>
              </h5>

              </div>
               <p class="card-text restaurant">At <%= cuisines.restaurant %>
                </p>


                
               


                <p class="card-text card-user">
                  <em>

                    by<a href="/user/<%= cuisines.author.id %>">
                    <strong><%= cuisines.author.username %></strong>
                    </a>

                     

                    

                    
                  </em>
                  <span class="right" style=" font-size: 104%; margin-top: -1.7px;"><small><strong><%= moment(cuisines.createdAt).fromNow() %></strong></small></span>

                </p>
 


                <p class="card-text card-link"><%= cuisines.description.substring(0, 100) %>...<a href="/cuisines/<%= cuisines._id %>">Know More</a> 
                </p>

                <div class="text-center cuisine-icons">


 
                      
                        
                    






                 <a  href="/cuisines/<%= cuisines._id %>/comments/new"><span  comment-img"><img  height="36" width="36" src="images/comment1.jpg" alt="Comments: "></a>


                     
                      <%= cuisines.commentsCount %></span>
                     
                   
                      <a href="/cuisines/<%= cuisines._id %>">
                    <span  likes-img"><img  height="34" width="34" src="images/thumb-up-icon.jpg" alt="Likes: "> </a><%= cuisines.votes %></span>
                  



                 </div>
              </div>



            </div>
        </div>
      </div>
           <% }); %>
  </div>
  
</div>
</div>
</div>











