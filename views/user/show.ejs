</span>




   
        <div class="container-fluid profile-container">
        <div class="row">
        <div class="col-md-12 user-name-h1">
        <h1 style="margin-bottom:20px !important;"><%= user.username %>'s Faves!</h1>

        </div>
            


            

               

         
        
                    


             
          
         
            
        <hr>
    
        <div   >
        
            <div class="container-fluid ">
                <div class="row">

                    <%  cuisines.reverse().forEach(function(cuisine) { %>
                    <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12" id="cuisine-col">
      <div class="card-deck">
          <div class="card cuisine-card">
            <a href="/cuisines/<%= cuisine._id %>">
                <img class="card-img-top" height="170" width="273" src="<%=cuisine.image %>" alt="<%= cuisine.name %>">  
            </a>

         




              <div class="card-body cuisine-card-body">
              <div class="text-center cuisine-name">
              <a class="card-title cuisine-title " href="/cuisines/<%= cuisine._id %>">
                <h5 class="card-title"><%= cuisine.name %> 
              </a>
              </h5>

              </div>
               <p class="card-text restaurant">At <%= cuisine.restaurant %>
                </p>


                
               


                <p class="card-text card-user">
                  <em>

                    by<a href="/user/<%= cuisine.author.id %>">
                    <strong><%= cuisine.author.username %></strong>
                    </a>

                     

                    

                    
                  </em>
                  <span class="right" style=" font-size: 104%; margin-top: -1.7px;"><small><strong><%= moment(cuisine.createdAt).fromNow() %></strong></small></span>

                </p>
 


                <p class="card-text card-link"><%= cuisine.description.substring(0, 100) %>...<a href="/cuisines/<%= cuisine._id %>">Know More</a> 
                </p>

                <div class="text-center cuisine-icons">


 
                      
                        
                    






                 <a  href="/cuisines/<%= cuisine._id %>/comments/new"><span  comment-img"><img  height="36" width="36" src="/../images/comment1.jpg" alt="Comments: "></a>


                     
                      <%= cuisine.commentsCount %></span>
                     
                   
                      <a href="/cuisines/<%= cuisine._id %>">
                    <span  likes-img"><img  height="34" width="34" src="/../images/thumb-up-icon.jpg" alt="Likes: "> </a><%= cuisine.votes %></span>
                  



                 </div>
              </div>



            </div>
        </div>
      </div>
                    <% }); %>
                </div>
            
        </div>
        
    </div>
</div>
